{
  "src_folders": ["test/integration/tests"],
  "output_folder": "test/integration/reports",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "test/integration/pages",
  "globals_path": "test/integration/globals",

  "selenium": {
    "start_process": true,
    "server_path": "./node_modules/selenium-standalone/.selenium/selenium-server/2.53.1-server.jar",
    "log_path": "./test/integration/reports",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "./node_modules/selenium-standalone/.selenium/chromedriver/2.25-x64-chromedriver"
    }
  },
  "test_settings": {
    "default": {
      "launch_url": "http://localhost:1999/dashboard",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "path": "test/integration/reports/screenshots"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },
    "phantomjs" : {
      "desiredCapabilities": {
        "browserName": "phantomjs",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "phantomjs.binary.path": "$(npm bin)/phantomjs"
      }
    },
    "dev": {
      "launch_url": "http://localhost:3000"
    }
  }
}
